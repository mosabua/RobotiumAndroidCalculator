	android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:text="@string/txtFirstNumber"
/>

<EditText 
	android:inputType="numberDecimal"
	android:id="@+id/EditText01" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content">
